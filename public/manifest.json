{
  "manifest_version": 3,
  "name": "Rename Tabs with F2",
  "version": "1.0",
  "description": "Rename opened tabs with F2 keyboard shortcut.",
  "icons": {
    "128": "icon128.png"
  },
  "default_locale": "en",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Rename Tabs with F2"
  }
}
